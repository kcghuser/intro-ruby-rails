<h1>Countries</h1>
<ul>
  <% @countries.each do |country| %>
    <li><%= link_to country.name, country_path(country) %></li>
  <% end %>
</ul>
<form method="get" action="<%= countries_path %>">
  <input type="text" name="query" placeholder="Search by country name">
  <button type="submit">Search</button>
</form>